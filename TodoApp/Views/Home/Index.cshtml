  @model TodoViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row justify-content-center">
    <div class="col-xl-6 col-md-8 col-sm-10">
        <table class="table">
            <thead>
                <tr class="table-primary">
                     <th scope="col">Id</th>
                     <th scope="col">Todo Name</th>
                     <th scope="col">Date Created</th>
                     <th scope="col"></th>
                </tr> 
               
            </thead>
            <tbody>
                @foreach(var t in Model.TodoList)
                {
                    <tr>
                        <td class="todos-column" scope="row">@t.Id </td>  
                        <td class="todos-column" >@t.TodoName </td>
                        <td class="todos-column" >@t.TimeCreated </td>
                        <td class="buttons-column"> 
                            <input class="btn btn-danger" type="submit" value="Delete" onclick="deleteTodo(@t.Id)"/>
                            <input class="btn-primary" type="submit" value="Update" onclick="populateForm(@t.Id)" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>